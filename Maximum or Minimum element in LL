int Max(struct Node *p)
{
    int max=MIN_INT; //sbse chota number ko max me store karaya hai
    while(p!=NULL)
    {

        if(p->data>max)
        {
            max = p->data;
        }

        p=p->next;
    }
    return max;
}

//Using Recursion
int RMax(struct Node *p)
{
    int x=0;

    if(p==0)
    {
        return MIN_INT;
    }

    x = max(p->next)
    if(x > p->data)
    {
        return x;
    }
    else
    {
        return p->data;
    }
}
